@model ViewApplication.Models.LocationDTO
@{
    ViewData["Title"] = "Edit Location";
    Layout = "~/Views/Shared/_Layout1.cshtml";
    var error = TempData["error"] as string;
}

<div class="">
    <form asp-action="EditPost">
        <hr />
        <div class="card card-header" style="text-align:right">
            <br />
            <h1 class="text-muted"><b>Edit Location</b></h1>
            <br />
        </div>
        <hr />
        <br />
        @if (!string.IsNullOrEmpty(error))
        {
            <div class="alert alert-danger" style="padding: 10px">
                <ul>
                    <li>@error</li>
                </ul>
            </div>
        }
        <input type="hidden" asp-for="LocationId" name="LocationId" id="LocationId" />
        <div class="col-lg-6 card card-body">
            <div class="divrow" style="text-align:left">
                <br />
                <h4 class="text-muted"><b>Details</b></h4>
                <br />
            </div>
            <div class="form-group">
                <label>Name of Vehicle:</label>
                <div class="m-input-icon m-input-icon--right">
                    <input type="text" id="LocationName" name="LocationName" class="form-control" asp-for="LocationName" placeholder="Enter Location Name" />
                </div>
            </div>
            <div class="form-group">
                <label>Reg Number:</label>
                <div class="m-input-icon m-input-icon--right">
                    <textarea cols="4" id="LocationAddress" style="min-height:100px !important" name="LocationAddress" class="form-control m-input" placeholder="Enter Location Address" asp-for="LocationAddress"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label>Assign To a Location: </label>
                <div class="m-input-icon m-input-icon--right">
                    <select id="StateId" asp-for="StateId" asp-items="ViewBag.states as IEnumerable<SelectListItem>" class="form-control dropdown-select2">
                        <option value="" id="TerId">Select a State</option>
                    </select>
                    <div class="form-control-feedback"><span asp-validation-for="StateId"></span></div>
                </div>
            </div>
        </div>
        <br />
        <br />
        <div class="m-portlet__foot m-portlet__no-border m-portlet__foot--fit">
            <div class="m-form__actions m-form__actions--solid">
                <div class="row">
                    <div class="col-lg-12 m--align-right" style="text-align:center">
                        <button type="submit" class="btn btn-warning" onclick="return post()" id="btncreate"> <i class="fa fa-edit"></i>  Update Location</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $(".dropdown-select2").select2();
        });
    </script>
}